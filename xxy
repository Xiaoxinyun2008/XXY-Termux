# --- [PHASE 0: BIOS POST] ---
tput cnorm
clear
echo -e "\033[1;32m[BIOS] System check initiated...\033[0m"

# 0.1 Ê∑±Â∫¶Ê†ºÂºèÂåñ (Low-level Format)
# Ê∏ÖÁêÜÊÆãÁïôÁöÑÊóßÁâàÊú¨ÂíåÂÉµÂ∞∏ËøõÁ®ã
echo -ne "\033[1;30m>> Killing Zombie Processes... \033[0m"
kill_list="sshd termux-x11 pulseaudio Xwayland vncserver proot python node"
for proc in $kill_list; do
    if pgrep -x "$proc" >/dev/null; then timeout 1s killall -9 "$proc" >/dev/null 2>&1; fi
done
echo -e "\033[1;32m[OK]\033[0m"

# 0.2 ÊûÑÂª∫Êñá‰ª∂Á≥ªÁªü (VFS Setup)
echo -ne "\033[1;30m>> Mounting Virtual Filesystem... \033[0m"
export SYS_ROOT="/data/data/com.termux/files/usr/tmp/xxy_matrix"
rm -rf "$SYS_ROOT"
mkdir -p "$SYS_ROOT/bin"
mkdir -p "$SYS_ROOT/etc"
mkdir -p "$SYS_ROOT/var/log"
mkdir -p "$SYS_ROOT/var/db"
mkdir -p "$SYS_ROOT/tmp"
echo -e "\033[1;32m[OK]\033[0m"

# --- [PHASE 1: KERNEL INJECTION] ---
cat > $PREFIX/bin/xxy << 'MATRIX_EOF'
#!/data/data/com.termux/files/usr/bin/bash

# ==============================================================================
# üèóÔ∏è KERNEL BOOTSTRAP (ÂÜÖÊ†∏ÂºïÂØº)
# ==============================================================================
export SYS_NAME="THE MATRIX"
export SYS_VER="v99999.0"
export PREFIX="/data/data/com.termux/files/usr"
export ROOT="$PREFIX/tmp/xxy_matrix"
export REGISTRY="$ROOT/var/db/registry.conf"
export LOG="$ROOT/var/log/sys.log"
export ROOTFS="$PREFIX/var/lib/proot-distro/installed-rootfs"
export LANG="C.UTF-8"

# Á°Æ‰øùÁéØÂ¢É
[ ! -d "$ROOT" ] && echo "Kernel Panic: VFS missing!" && exit 1

# ÊçïËé∑‰ø°Âè∑
trap_exit() {
    tput cnorm; tput sgr0; clear
    echo -e "\n\033[1;31m[SYSTEM HALT] Matrix disconnected.\033[0m"
    exit 0
}
trap trap_exit EXIT INT TERM

# ==============================================================================
# üé® GRAPHICS DRIVER (ÂõæÂΩ¢È©±Âä®)
# ==============================================================================

# È¢úËâ≤ÂÆö‰πâ (ÊîØÊåÅ‰∏ªÈ¢òÂàáÊç¢)
load_theme() {
    local theme=${1:-"MATRIX"}
    if [ "$theme" == "MATRIX" ]; then
        C_PRI=$(tput setaf 46)   # Hacker Green
        C_SEC=$(tput setaf 22)   # Dark Green
        C_ACC=$(tput setaf 154)  # Bright Green
        C_ERR=$(tput setaf 196)  # Red
        C_TXT=$(tput setaf 194)  # Pale Green
    elif [ "$theme" == "CYBER" ]; then
        C_PRI=$(tput setaf 51)   # Cyan
        C_SEC=$(tput setaf 57)   # Purple
        C_ACC=$(tput setaf 226)  # Yellow
        C_ERR=$(tput setaf 196)  # Red
        C_TXT=$(tput setaf 255)  # White
    elif [ "$theme" == "MARS" ]; then
        C_PRI=$(tput setaf 208)  # Orange
        C_SEC=$(tput setaf 88)   # Dark Red
        C_ACC=$(tput setaf 220)  # Gold
        C_ERR=$(tput setaf 196)  # Red
        C_TXT=$(tput setaf 230)  # Cream
    fi
    C_RST=$(tput sgr0)
    C_GR=$(tput setaf 240)
}
# ÈªòËÆ§Âä†ËΩΩ Matrix ‰∏ªÈ¢ò
load_theme "MATRIX"

# Âü∫Á°ÄÁªòÂõæÂáΩÊï∞
cursor_to() { tput cup $1 $2; }
hide_cursor() { tput civis; }
show_cursor() { tput cnorm; }

# ÁªòÂà∂ËæπÊ°Ü (Hardware Accelerated Simulation)
draw_window() {
    local y=$1; local x=$2; local h=$3; local w=$4; local title=$5
    # Top
    cursor_to $y $x; echo -ne "${C_SEC}‚ïî"
    for ((i=0; i<w-2; i++)); do echo -ne "‚ïê"; done
    echo -ne "‚ïó${C_RST}"
    # Sides
    for ((i=1; i<h-1; i++)); do
        cursor_to $((y+i)) $x; echo -ne "${C_SEC}‚ïë${C_RST}"
        cursor_to $((y+i)) $((x+w-1)); echo -ne "${C_SEC}‚ïë${C_RST}"
    done
    # Bottom
    cursor_to $((y+h-1)) $x; echo -ne "${C_SEC}‚ïö"
    for ((i=0; i<w-2; i++)); do echo -ne "‚ïê"; done
    echo -ne "‚ïù${C_RST}"
    # Title
    if [ -n "$title" ]; then
        local tpos=$((x + (w - ${#title}) / 2))
        cursor_to $y $tpos; echo -ne "${C_PRI} ${title} ${C_RST}"
    fi
}

# ÁªòÂà∂ËøõÂ∫¶Êù°
draw_progress() {
    local pct=$1; local msg=$2
    local w=30
    local fill=$((pct * w / 100))
    local empty=$((w - fill))
    
    tput sc
    cursor_to 20 10
    echo -ne "${C_TXT}$msg${C_RST}"
    cursor_to 21 10
    echo -ne "${C_ACC}[${C_PRI}"
    for ((i=0; i<fill; i++)); do echo -ne "‚ñà"; done
    echo -ne "${C_SEC}"
    for ((i=0; i<empty; i++)); do echo -ne "‚ñë"; done
    echo -ne "${C_ACC}] ${pct}%${C_RST}"
    tput rc
}

# ÊâìÂ≠óÊú∫ÁâπÊïà
type_text() {
    local text="$1"
    local speed=${2:-0.01}
    for ((i=0; i<${#text}; i++)); do
        echo -ne "${text:$i:1}"
        sleep $speed
    done
    echo ""
}

# ==============================================================================
# üíæ REGISTRY SYSTEM (Ê≥®ÂÜåË°®Á≥ªÁªü)
# ==============================================================================

# ÂàùÂßãÂåñÊ≥®ÂÜåË°®
init_registry() {
    if [ ! -f "$REGISTRY" ]; then
        echo "THEME=MATRIX" > "$REGISTRY"
        echo "LANG=CN" >> "$REGISTRY"
        echo "LAST_LOGIN=$(date)" >> "$REGISTRY"
        echo "INSTALL_COUNT=0" >> "$REGISTRY"
    fi
}

# ËØªÂèñÈîÆÂÄº
reg_read() {
    local key=$1
    grep "^$key=" "$REGISTRY" | cut -d'=' -f2
}

# ÂÜôÂÖ•ÈîÆÂÄº
reg_write() {
    local key=$1; local val=$2
    if grep -q "^$key=" "$REGISTRY"; then
        sed -i "s|^$key=.*|$key=$val|" "$REGISTRY"
    else
        echo "$key=$val" >> "$REGISTRY"
    fi
}

# Â∫îÁî®ÈÖçÁΩÆ
apply_config() {
    local th=$(reg_read "THEME")
    load_theme "$th"
}

# ==============================================================================
# üß† LOGIC CORE (ÈÄªËæëÊ†∏ÂøÉ)
# ==============================================================================

# [Èò≤ÂëÜ] ÁªùÂØπËæìÂÖ•ÈîÅ
wait_key() {
    local prompt=$1; local valid=$2
    while true; do
        cursor_to 23 2; echo -ne "                                              "
        cursor_to 23 2; echo -ne "${C_ACC}‚û§ $prompt${C_RST}"
        
        read -n 1 key
        key=$(echo "$key" | tr -d ' ')
        
        if [ -z "$key" ]; then continue; fi
        if [[ "$valid" == *"$key"* ]]; then
            RET="$key"
            return 0
        else
            cursor_to 23 40; echo -ne "${C_ERR}INVALID${C_RST}"; sleep 0.2
        fi
    done
}

# [Á≥ªÁªü] Á°¨‰ª∂ÈÅ•Êµã
get_telemetry() {
    TIME=$(date '+%H:%M:%S')
    # CPU
    LOAD=$(uptime | awk -F'load average:' '{ print $2 }' | awk -F, '{print $1}' | tr -d ' ')
    # RAM
    RAM_U=$(free -m | awk 'NR==2{print $3}')
    RAM_T=$(free -m | awk 'NR==2{print $2}')
    # DISK
    DISK=$(df -h "$PREFIX" | awk 'NR==2{print $4}')
    # NET (Async check result)
    if [ -f "$ROOT/tmp/net.status" ]; then NET_STAT=$(cat "$ROOT/tmp/net.status"); else NET_STAT="SCAN.."; fi
    # SSH
    SSH_CONN=$(netstat -tn 2>/dev/null | grep ':8022' | grep 'ESTABLISHED' | wc -l)
}

# [ÂêéÂè∞] ÁΩëÁªúÂÆàÊä§ËøõÁ®ã
net_daemon() {
    (while true; do
        if ping -c 1 -W 1 223.5.5.5 >/dev/null 2>&1; then echo "ONLINE" > "$ROOT/tmp/net.status"
        else echo "OFFLINE" > "$ROOT/tmp/net.status"; fi
        sleep 5
    done) &
    echo $! > "$ROOT/var/run/net.pid"
}

# ==============================================================================
# üë∑ VIRTUAL WORKER (ËôöÊãüÂ∑•Âçï)
# ==============================================================================
create_worker() {
    local f="$ROOT/bin/worker"
    rm -f "$f"
    cat >> "$f" << 'EOF'
#!/bin/sh
set -e
export DEBIAN_FRONTEND=noninteractive
act=$1
arg=$2

if [ -f /etc/alpine-release ]; then T="alpine"; PM="apk"
elif [ -f /etc/arch-release ]; then T="arch"; PM="pacman"
elif [ -f /etc/debian_version ]; then T="debian"; PM="apt"
else T="unknown"; fi

case "$act" in
  src) 
    if [ "$T" = "debian" ]; then 
        grep -q "tsinghua" /etc/apt/sources.list || sed -i 's/ports.ubuntu.com/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list
        apt update -y
    elif [ "$T" = "alpine" ]; then sed -i 's/dl-cdn.alpinelinux.org/mirrors.ustc.edu.cn/g' /etc/apk/repositories; apk update; fi ;;
  
  gui)
    if [ "$T" = "debian" ]; then apt install -y xfce4 xfce4-goodies dbus-x11 tigervnc-standalone-server
    elif [ "$T" = "alpine" ]; then apk add xfce4 dbus-x11 tigervnc; fi
    mkdir -p ~/.vnc; echo "123456" | vncpasswd -f > ~/.vnc/passwd; chmod 600 ~/.vnc/passwd ;;
    
  clean) sed -i '/fastfetch/d' /etc/profile /etc/bash.bashrc ~/.bashrc 2>/dev/null ;;
  
  fetch) command -v fastfetch >/dev/null || $PM install -y fastfetch || $PM install -y neofetch ;;
  
  pkg) if [ "$T" = "debian" ]; then apt install -y $arg; elif [ "$T" = "alpine" ]; then apk add $arg; fi ;;
esac
EOF
    chmod 777 "$f"
}

run_task() {
    local sys=$1; local desc=$2; local cmd=$3; local arg=$4
    hide_cursor
    # Ê®°ÊãüËøõÂ∫¶Êù°
    for i in {1..10}; do
        draw_progress $((i*10)) "Executing: $desc"
        sleep 0.05
    done
    
    if proot-distro login "$sys" --shared-tmp -- /bin/sh "$ROOT/bin/worker" "$cmd" "$arg" >> "$LOG" 2>&1; then
         draw_progress 100 "${C_PRI}Success: $desc"
         sleep 0.5
    else
         draw_progress 100 "${C_ERR}Failed: $desc"
         sleep 1
    fi
    FORCE_RENDER=true
}

# ==============================================================================
# üß© MODULES (ÂäüËÉΩÊ®°Âùó)
# ==============================================================================

get_systems() { if [ -d "$ROOTFS" ]; then ls -1 "$ROOTFS" 2>/dev/null; fi; }

# [M1] Á≥ªÁªüÂÆâË£Ö
mod_install() {
    clear; draw_window 0 0 24 60 "INSTALLATION"
    
    # Á°¨‰ª∂Ê£ÄÊµã
    local free=$(df -m "$PREFIX" | awk 'NR==2 {print $4}')
    cursor_to 3 4; echo "${C_TXT}Storage Check: ${C_ACC}${free}MB${C_RST}"
    if [ "$free" -lt 2000 ]; then echo "${C_ERR} [FAIL]${C_RST}"; read -n 1; return; fi
    
    cursor_to 4 4; echo "${C_TXT}Network Check: ${C_ACC}${NET_STAT}${C_RST}"
    if [ "$NET_STAT" == "OFFLINE" ]; then echo "${C_ERR} [FAIL]${C_RST}"; read -n 1; return; fi
    
    cursor_to 6 4; echo "${C_PRI}1. Ubuntu (Recommended)${C_RST}"
    cursor_to 7 4; echo "${C_PRI}2. Debian${C_RST}"
    cursor_to 8 4; echo "${C_PRI}3. ArchLinux${C_RST}"
    cursor_to 9 4; echo "${C_PRI}4. Alpine${C_RST}"
    cursor_to 11 4; echo "${C_GR}0. Cancel${C_RST}"
    
    wait_key "Select Distro: " "01234"
    [ "$RET" = "0" ] && return
    
    local map=("x" "ubuntu" "debian" "archlinux" "alpine")
    local target=${map[$RET]}
    
    if [ -d "$ROOTFS/$target" ]; then cursor_to 13 4; echo "${C_ACC}Already Installed!${C_RST}"; sleep 1; return; fi
    
    # ÊâßË°åÂÆâË£Ö
    cursor_to 14 4; echo "${C_TXT}Initializing...${C_RST}"
    proot-distro reset "$target" >/dev/null 2>&1
    rm -rf "$PREFIX/var/lib/proot-distro/download"
    
    cursor_to 15 4; echo "${C_TXT}Downloading... (Please Wait)${C_RST}"
    if proot-distro install "$target"; then
        # Â∞∏Ê£Ä
        if [ ! -f "$ROOTFS/$target/bin/sh" ]; then
             cursor_to 16 4; echo "${C_ERR}Corrupted File Detected! Rolling back...${C_RST}"
             proot-distro remove "$target"
             read -n 1; return
        fi
        create_worker
        run_task "$target" "Optimizing Sources" "src"
        run_task "$target" "Localization" "cn"
        run_task "$target" "Visuals" "fetch"
        
        # Êõ¥Êñ∞Ê≥®ÂÜåË°®
        local count=$(reg_read "INSTALL_COUNT")
        reg_write "INSTALL_COUNT" $((count+1))
        
        cursor_to 18 4; echo "${C_PRI}Installation Complete!${C_RST}"; read -n 1
    else
        cursor_to 16 4; echo "${C_ERR}Download Failed. Check VPN.${C_RST}"; read -n 1
    fi
    FORCE_RENDER=true
}

# [M2] Á≥ªÁªüÁôªÂΩï
mod_login() {
    mapfile -t LIST < <(get_systems)
    if [ ${#LIST[@]} -eq 0 ]; then return; fi
    
    # ÁÆÄÊòìÈÄâÊã©Âô®
    clear; draw_window 5 10 15 40 "LOGIN"
    for i in "${!LIST[@]}"; do
        cursor_to $((7+i)) 12; echo "${C_PRI}$((i+1)). ${LIST[$i]}${C_RST}"
    done
    
    local valid="0"; for i in "${!LIST[@]}"; do valid="${valid}$((i+1))"; done
    wait_key "Select: " "$valid"
    [ "$RET" = "0" ] && return
    
    SELECTED="${LIST[$((RET-1))]}"
    create_worker
    run_task "$SELECTED" "Cleaning Env" "clean"
    
    tput cnorm; clear
    proot-distro login "$SELECTED" --shared-tmp -- /bin/bash -c "if command -v fastfetch >/dev/null; then fastfetch; fi; exec bash"
    FORCE_RENDER=true
}

# [M3] ÁëûÂ£´ÂÜõÂàÄ (Tools)
mod_tools() {
    while true; do
        clear; draw_window 0 0 20 50 "SWISS ARMY KNIFE"
        cursor_to 3 4; echo "${C_PRI}1. ÂÖ¨ÁΩë IP Êü•ËØ¢${C_RST}"
        cursor_to 4 4; echo "${C_PRI}2. Á´ØÂè£Êâ´Êèè (Local)${C_RST}"
        cursor_to 5 4; echo "${C_PRI}3. ‰øÆÂ§ç 'Bad Port'${C_RST}"
        cursor_to 6 4; echo "${C_PRI}4. Á≥ªÁªü‰ΩìÊ£Ä${C_RST}"
        cursor_to 8 4; echo "${C_GR}0. ËøîÂõû${C_RST}"
        
        wait_key "Select Tool: " "01234"
        case "$RET" in
            0) return ;;
            1) 
                cursor_to 10 4; echo "Querying..."
                MYIP=$(curl -s ifconfig.me)
                cursor_to 11 4; echo "${C_ACC}IP: $MYIP${C_RST}"; read -n 1 ;;
            2)
                cursor_to 10 4; echo "Scanning Open Ports..."
                PORTS=$(netstat -tunlp 2>/dev/null | grep LISTEN)
                echo "$PORTS" > "$ROOT/tmp/ports.txt"
                local i=0
                while read line; do
                    cursor_to $((11+i)) 4; echo "${C_TXT}${line:0:40}...${C_RST}"
                    i=$((i+1))
                    if [ $i -gt 5 ]; then break; fi
                done < "$ROOT/tmp/ports.txt"
                read -n 1 ;;
            3)
                rm -f ~/.ssh/known_hosts
                cursor_to 10 4; echo "${C_PRI}Fixed known_hosts.${C_RST}"; read -n 1 ;;
            4)
                cursor_to 10 4; echo "CPU Cores: $(nproc)"
                cursor_to 11 4; echo "Kernel: $(uname -r)"
                cursor_to 12 4; echo "Termux Ver: $TERMUX_VERSION"
                read -n 1 ;;
        esac
    done
}

# [M4] ËÆæÁΩÆ‰∏≠ÂøÉ (Settings)
mod_settings() {
    clear; draw_window 5 10 12 40 "SETTINGS"
    cursor_to 7 12 "1. Theme: Matrix (Green)"
    cursor_to 8 12 "2. Theme: Cyber (Purple)"
    cursor_to 9 12 "3. Theme: Mars (Red)"
    cursor_to 11 12 "0. Back"
    
    wait_key "Select Theme: " "0123"
    case "$RET" in
        1) reg_write "THEME" "MATRIX" ;;
        2) reg_write "THEME" "CYBER" ;;
        3) reg_write "THEME" "MARS" ;;
    esac
    apply_config
    FORCE_RENDER=true
}

# [M5] SSH Èπ∞Áúº
mod_ssh() {
    while true; do
        clear; draw_window 0 0 20 50 "SSH RADAR"
        if pgrep sshd >/dev/null; then S="${C_PRI}ON${C_RST}"; else S="${C_ERR}OFF${C_RST}"; fi
        cursor_to 3 4 "Status: $S"
        cursor_to 5 4 "1. Start SSH"
        cursor_to 6 4 "2. Stop SSH"
        cursor_to 7 4 "3. Kick All"
        cursor_to 8 4 "0. Back"
        
        wait_key "CMD: " "0123"
        case "$RET" in
            0) return ;;
            1) pkill sshd; sshd; ;;
            2) pkill sshd; ;;
            3) pgrep sshd | grep -v $(pgrep -o sshd) | xargs kill -9 2>/dev/null ;;
        esac
    done
}

# ==============================================================================
# üñ•Ô∏è UI MAIN LOOP
# ==============================================================================

draw_dashboard() {
    hide_cursor
    clear
    # Main Frame
    draw_window 0 0 24 60 "XXY MATRIX $SYS_VER"
    
    # HUD
    draw_window 2 2 6 27 "HARDWARE"
    cursor_to 3 4 "CPU : ${C_TXT}$LOAD${C_RST}"
    cursor_to 4 4 "RAM : ${C_TXT}$RAM_U MB${C_RST}"
    cursor_to 5 4 "DISK: ${C_TXT}$DISK${C_RST}"
    
    draw_window 2 31 6 27 "NETWORK"
    cursor_to 3 33 "IP  : ${C_TXT}${IP:0:12}..${C_RST}"
    cursor_to 4 33 "PING: ${C_TXT}$NET_STAT${C_RST}"
    cursor_to 5 33 "SSH : $SSH_S"
    
    # Menu
    local MY=$((24/2 - 2))
    local MX=5
    cursor_to $((MY)) $MX   "${C_PRI}[1]${C_RST} ${C_TXT}Login System${C_RST}"
    cursor_to $((MY+1)) $MX "${C_PRI}[2]${C_RST} ${C_TXT}Install System${C_RST}"
    cursor_to $((MY+2)) $MX "${C_PRI}[3]${C_RST} ${C_TXT}Desktop GUI${C_RST}"
    cursor_to $((MY+3)) $MX "${C_PRI}[4]${C_RST} ${C_TXT}SSH Radar${C_RST}"
    
    local MX2=32
    cursor_to $((MY)) $MX2   "${C_PRI}[5]${C_RST} ${C_TXT}Swiss Tools${C_RST}"
    cursor_to $((MY+1)) $MX2 "${C_PRI}[6]${C_RST} ${C_TXT}Dev Stacks${C_RST}"
    cursor_to $((MY+2)) $MX2 "${C_PRI}[7]${C_RST} ${C_TXT}Settings${C_RST}"
    cursor_to $((MY+3)) $MX2 "${C_PRI}[8]${C_RST} ${C_TXT}Backup Ctr${C_RST}"
    
    cursor_to $((MY+5)) $MX  "${C_ERR}[0]${C_RST} ${C_TXT}Disconnect${C_RST}"
    
    # Footer
    local footer="User: $(whoami) | Theme: $(reg_read THEME)"
    cursor_to 22 2; echo -ne "${C_GR}$footer${C_RST}"
}

refresh_data() {
    get_telemetry
    # Â±ÄÈÉ®Âà∑Êñ∞ÊäÄÊúØ (Âè™Êõ¥Êñ∞ HUD Êï∞Â≠ó)
    cursor_to 3 10; echo -ne "${C_TXT}$LOAD   ${C_RST}"
    cursor_to 4 10; echo -ne "${C_TXT}$RAM_U MB   ${C_RST}"
    cursor_to 4 39; echo -ne "${C_TXT}$NET_STAT   ${C_RST}"
}

# --- BOOT ---
init_registry
apply_config
if ! command -v proot-distro >/dev/null; then pkg install proot-distro -y >/dev/null 2>&1; fi
net_daemon # ÂêØÂä®ÂêéÂè∞ÁΩëÁªúÊ£ÄÊµã

FORCE_RENDER=true

while true; do
    if [ "$FORCE_RENDER" == "true" ]; then
        draw_dashboard
        FORCE_RENDER=false
    fi
    
    refresh_data
    
    read -t 0.5 -n 1 input
    if [ -n "$input" ]; then
        case "$input" in
            1) mod_login; FORCE_RENDER=true ;;
            2) mod_install; FORCE_RENDER=true ;;
            3) mod_gui; FORCE_RENDER=true ;;
            4) mod_ssh; FORCE_RENDER=true ;;
            5) mod_tools; FORCE_RENDER=true ;;
            7) mod_settings; FORCE_RENDER=true ;;
            0) exit 0 ;;
        esac
    fi
done
MATRIX_EOF

chmod 755 $PREFIX/bin/xxy
clear
echo -e "\033[1;32m[SYSTEM] Matrix Kernel v99999.0 Loaded.\033[0m"
echo -e "---------------------------------------"
echo -e "üíæ Registry initialized at: $REGISTRY"
echo -e "üé® Theme Engine initialized"
echo -e "üß† Neural Logic Core active"
echo -e "---------------------------------------"
read -n 1 -p "Press any key to jack in..."
xxy

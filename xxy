# 1. å¼ºåˆ¶æ¸…ç†æ—§ç‰ˆæœ¬
rm -f $PREFIX/bin/xxy
rm -f $PREFIX/tmp/xxy_*

# 2. å†™å…¥æ–°ç‰ˆè„šæœ¬
cat > $PREFIX/bin/xxy << 'INSTALL_EOF'
#!/data/data/com.termux/files/usr/bin/bash
# ==============================================================================
# PROJECT: XXY (Stable Edition v33.1)
# UPDATE: ä¿®å¤è·¯å¾„æ˜ å°„ã€ç³»ç»Ÿè¯†åˆ«ã€VNCå¯†ç è‡ªåŠ¨åŒ–ã€å›½å†…æºåŠ é€Ÿ
# ==============================================================================

# --- 0. åŸºç¡€ç¯å¢ƒè‡ªæ£€ ---
export PREFIX="/data/data/com.termux/files/usr"
export TMPDIR="$PREFIX/tmp"
export PROOT_TMP="/tmp" # å®¹å™¨å†…çš„ tmp è·¯å¾„
[ ! -d "$TMPDIR" ] && mkdir -p "$TMPDIR"

# æ•è·å¼‚å¸¸é€€å‡º
cleanup() {
    tput cnorm
    stty echo
    rm -f "$WORKER_SCRIPT" "$INJECT_SCRIPT" 2>/dev/null
}
trap cleanup EXIT INT TERM

# æ£€æŸ¥å¿…è¦ä¾èµ– (åŒ…å« X11 ä»“åº“)
echo "æ­£åœ¨è‡ªæ£€ä¾èµ–ç¯å¢ƒ..."
if ! command -v proot-distro &>/dev/null; then
    pkg update -y && pkg install proot-distro -y
fi

# æ£€æŸ¥ termux-x11 å’ŒåŸºç¡€å·¥å…·
MISSING_DEPS=""
for dep in pulseaudio wget curl ncurses-utils grep sed awk; do
    if ! command -v $dep &>/dev/null; then MISSING_DEPS="$MISSING_DEPS $dep"; fi
done

# ç‰¹æ®Šæ£€æŸ¥ termux-x11 (åœ¨ x11-repo ä¸­)
if ! command -v termux-x11 &>/dev/null; then
    echo "æ­£åœ¨å¯ç”¨ X11 ä»“åº“å¹¶å®‰è£…å¿…è¦ç»„ä»¶..."
    pkg install x11-repo -y
    MISSING_DEPS="$MISSING_DEPS termux-x11-nightly"
fi

if [ -n "$MISSING_DEPS" ]; then
    echo "æ­£åœ¨å®‰è£…ç¼ºå¤±ä¾èµ–: $MISSING_DEPS ..."
    pkg install $MISSING_DEPS -y
fi

# å®šä¹‰å†…éƒ¨è„šæœ¬è·¯å¾„
WORKER_SCRIPT="$TMPDIR/xxy_worker_$$.sh"
INJECT_SCRIPT="$TMPDIR/xxy_inject_$$.sh"

# --- ğŸ¨ é¢œè‰²å¸¸é‡ ---
R=$(tput setaf 1); G=$(tput setaf 2); Y=$(tput setaf 3)
B=$(tput setaf 4); P=$(tput setaf 5); C=$(tput setaf 6)
W=$(tput setaf 7); GR=$(tput setaf 8); NC=$(tput sgr0)

# --- ğŸ”§ æ ¸å¿ƒåŠŸèƒ½å‡½æ•° ---

# 1. ç”Ÿæˆå®¹å™¨å†…éƒ¨ Worker è„šæœ¬ (å¢å¼ºç‰ˆ)
create_worker_script() {
    rm -f "$WORKER_SCRIPT"
    touch "$WORKER_SCRIPT"
    
    cat << 'EOF' > "$WORKER_SCRIPT"
#!/bin/sh
action=$1
is_debian=false

# --- åŒ…ç®¡ç†å™¨æ¢æµ‹ ---
if command -v apt >/dev/null; then
    INSTALL="apt install -y"; UPDATE="apt update -y"
    is_debian=true
elif command -v pacman >/dev/null; then
    INSTALL="pacman -S --noconfirm"; UPDATE="pacman -Sy --noconfirm"
elif command -v apk >/dev/null; then
    INSTALL="apk add"; UPDATE="apk update"
else
    echo "Unknown PM"; exit 1
fi

# --- ä»»åŠ¡é€»è¾‘ ---
case "$action" in
  change_source)
    # ç®€å•çš„æ¢æºæ“ä½œ (é’ˆå¯¹å°ç™½åŠ é€Ÿ)
    if [ -f /etc/apt/sources.list ]; then
        sed -i 's/http:\/\/.*archive.ubuntu.com/http:\/\/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list
        sed -i 's/http:\/\/.*security.ubuntu.com/http:\/\/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list
        sed -i 's/http:\/\/deb.debian.org/http:\/\/mirrors.ustc.edu.cn/g' /etc/apt/sources.list
    elif [ -f /etc/apk/repositories ]; then
        sed -i 's/dl-cdn.alpinelinux.org/mirrors.ustc.edu.cn/g' /etc/apk/repositories
    fi
    $UPDATE
    ;;

  install_gui)
    if [ "$is_debian" = true ]; then
        DEBIAN_FRONTEND=noninteractive $INSTALL xfce4 xfce4-goodies dbus-x11 tigervnc-standalone-server
    elif command -v pacman >/dev/null; then
        $INSTALL xfce4 dbus tigervnc
    elif command -v apk >/dev/null; then
        $INSTALL xfce4 dbus-x11 tigervnc
    fi
    
    # VNC å¯†ç åˆå§‹åŒ– (é˜²æ­¢å°ç™½å¡ä½)
    if [ ! -f ~/.vnc/passwd ]; then
        mkdir -p ~/.vnc
        # è®¾ç½®å¯†ç ä¸º 123456
        echo "123456" | vncpasswd -f > ~/.vnc/passwd
        chmod 600 ~/.vnc/passwd
    fi
    ;;

  install_cn)
    if [ "$is_debian" = true ]; then
        DEBIAN_FRONTEND=noninteractive $INSTALL locales fonts-noto-cjk ttf-wqy-zenhei
        echo "zh_CN.UTF-8 UTF-8" > /etc/locale.gen && locale-gen
    elif command -v pacman >/dev/null; then
        $INSTALL adobe-source-han-sans-cn-fonts
        echo "zh_CN.UTF-8 UTF-8" >> /etc/locale.gen && locale-gen
    elif command -v apk >/dev/null; then
        $INSTALL font-noto-cjk
    fi
    echo "export LANG=zh_CN.UTF-8" > /etc/profile.d/locale.sh
    ;;

  install_fetch)
    $INSTALL fastfetch || $INSTALL neofetch
    if command -v fastfetch >/dev/null; then echo "fastfetch" > /tmp/fetch_bin
    elif command -v neofetch >/dev/null; then echo "neofetch" > /tmp/fetch_bin
    else echo "none" > /tmp/fetch_bin; fi
    ;;
esac
EOF
    chmod 755 "$WORKER_SCRIPT"
}

# 2. è·å–å·²å®‰è£…ç³»ç»Ÿ (ä¿®å¤ç‰ˆï¼šä» proot-distro åˆ—è¡¨è§£æ)
get_systems() {
    # è§£æ "Installed distributions:" ä¸‹æ–¹çš„åˆ—è¡¨
    # è¿‡æ»¤æ‰ç©ºè¡Œå’Œæ ‡é¢˜ï¼Œæå–ä»¥ * å¼€å¤´çš„è¡Œ
    proot-distro list | awk '
        /^Installed distributions:/ {flag=1; next}
        /^Supported distributions:/ {flag=0}
        flag && /\*/ {print $2}
    '
}

# 3. åå°æ‰§è¡Œä»»åŠ¡ (ä¿®å¤è·¯å¾„æ˜ å°„ Bug)
run_task() {
    local sys=$1
    local cmd=$2
    local text=$3
    
    # è®¡ç®—å®¹å™¨å†…çš„æ˜ å°„è·¯å¾„: $TMPDIR åœ¨å®¹å™¨å†…æ˜¯ /tmp
    local inner_script="/tmp/$(basename "$WORKER_SCRIPT")"
    
    tput cup 18 0
    echo -ne "${Y}âš™ï¸  æ­£åœ¨$text... (å¯èƒ½éœ€è¦å‡ åˆ†é’Ÿ)${NC}"
    
    # æ‰§è¡Œ
    proot-distro login "$sys" --shared-tmp -- /bin/sh "$inner_script" "$cmd" >/dev/null 2>&1
    
    tput cup 18 0
    if [ $? -eq 0 ]; then
        echo -ne "${G}âœ… $sys $text æˆåŠŸ               ${NC}"
    else
        echo -ne "${R}âŒ $sys $text å¤±è´¥               ${NC}"
    fi
}

# 4. ç³»ç»Ÿé€‰æ‹©å™¨
select_menu() {
    mapfile -t SYS_ARRAY < <(get_systems)
    
    if [ ${#SYS_ARRAY[@]} -eq 0 ]; then
        echo -e "\n${R}âš ï¸ æœªæ£€æµ‹åˆ°ç³»ç»Ÿï¼${NC}"
        echo "è¯·å…ˆé€‰æ‹© [2] å®‰è£…æ–°ç³»ç»Ÿ"
        read -n 1 -s -r -p "æŒ‰ä»»æ„é”®è¿”å›..."
        return 1
    fi

    for i in "${!SYS_ARRAY[@]}"; do
        echo -e "${G}$((i+1)).${NC} ${SYS_ARRAY[$i]}"
    done
    echo -e "${W}0.${NC} è¿”å›ä¸»èœå•"
    
    tput cnorm; stty echo
    read -p "ğŸ‘‰ è¯·è¾“å…¥åºå·: " choice
    stty -echo; tput civis
    
    if [ "$choice" == "0" ] || [ -z "$choice" ]; then return 1; fi
    if [[ "$choice" =~ ^[0-9]+$ ]] && [ "$choice" -ge 1 ] && [ "$choice" -le "${#SYS_ARRAY[@]}" ]; then
        echo "${SYS_ARRAY[$((choice-1))]}"
        return 0
    else
        echo "è¾“å…¥æ— æ•ˆ"; return 1
    fi
}

# --- ğŸ“¦ åŠŸèƒ½æ¨¡å— ---

# [åŠŸèƒ½1] ç™»å½• (å¸¦è‡ªåŠ¨æ³¨å…¥)
do_login() {
    clear; echo -e "${C}=== ç™»å½•ç³»ç»Ÿ ===${NC}"
    TARGET=$(select_menu) || return
    
    create_worker_script
    # è·å–å®¹å™¨å†…è·¯å¾„
    local inner_script="/tmp/$(basename "$WORKER_SCRIPT")"
    local inner_inject="/tmp/$(basename "$INJECT_SCRIPT")"
    
    # å°è¯•å®‰è£… fetch å·¥å…·
    proot-distro login "$TARGET" --shared-tmp -- /bin/sh "$inner_script" "install_fetch" >/dev/null 2>&1
    
    # æ³¨å…¥ bashrc
    cat > "$INJECT_SCRIPT" << 'EOF'
RC=~/.bashrc
[ -f /etc/profile.d/locale.sh ] && . /etc/profile.d/locale.sh
if [ -f /tmp/fetch_bin ]; then
    TOOL=$(cat /tmp/fetch_bin)
    rm -f /tmp/fetch_bin
    if [ "$TOOL" != "none" ] && ! grep -q "$TOOL" "$RC" 2>/dev/null; then
        echo "" >> "$RC"; echo "$TOOL" >> "$RC"
    fi
fi
EOF
    proot-distro login "$TARGET" --shared-tmp -- /bin/sh "$inner_inject" >/dev/null 2>&1
    
    cleanup
    proot-distro login "$TARGET"
    tput civis; stty -echo; draw_ui
}

# [åŠŸèƒ½2] å®‰è£… (å¸¦è‡ªåŠ¨æ¢æº)
do_install() {
    clear; echo -e "${C}=== å®‰è£…æ–°ç³»ç»Ÿ ===${NC}"
    # ä»…åˆ—å‡ºæ¨èç»™å°ç™½çš„ç¨³å®šç‰ˆ
    DISTROS=("ubuntu" "debian" "archlinux" "alpine")
    for i in "${!DISTROS[@]}"; do echo -e "${W}$((i+1)).${NC} ${DISTROS[$i]}"; done
    echo -e "${W}0.${NC} è¿”å›"
    
    tput cnorm; stty echo
    read -p "ğŸ‘‰ é€‰æ‹©å‘è¡Œç‰ˆ: " idx
    stty -echo; tput civis
    
    if [ "$idx" == "0" ]; then return; fi
    if [[ "$idx" =~ ^[0-9]+$ ]] && [ "$idx" -ge 1 ] && [ "$idx" -le "${#DISTROS[@]}" ]; then
        TARGET=${DISTROS[$((idx-1))]}
        
        echo -e "\n${Y}æ­£åœ¨ä¸‹è½½ $TARGET (è¯·ä¿æŒç½‘ç»œé€šç•…)...${NC}"
        tput cnorm
        if proot-distro install $TARGET; then
            tput civis
            create_worker_script
            # è‡ªåŠ¨æ¢æº + æ›´æ–°
            run_task "$TARGET" "change_source" "è‡ªåŠ¨æ›¿æ¢å›½å†…æº"
            run_task "$TARGET" "install_cn" "é…ç½®ä¸­æ–‡ç¯å¢ƒ"
            echo -e "\n${G}å®‰è£…æˆåŠŸï¼å·²ä¼˜åŒ–ç½‘ç»œé…ç½®ã€‚${NC}"; read -n 1 -s -r -p "..."
        else
            echo -e "\n${R}å®‰è£…å¤±è´¥ã€‚è¯·æ£€æŸ¥ç½‘ç»œæˆ–å­˜å‚¨ç©ºé—´ã€‚${NC}"; read -n 1 -s -r -p "..."
        fi
    fi
}

# [åŠŸèƒ½3] GUI æ¡Œé¢ (ä¿®å¤ VNC å’Œ X11)
do_gui() {
    clear; echo -e "${C}=== å¯åŠ¨æ¡Œé¢ç¯å¢ƒ ===${NC}"
    TARGET=$(select_menu) || return
    
    create_worker_script
    
    # æ£€æŸ¥æ˜¯å¦å®‰è£…äº† XFCE å’Œ VNC
    echo "æ­£åœ¨æ£€æŸ¥æ¡Œé¢ç»„ä»¶..."
    if ! proot-distro login "$TARGET" -- bash -c "command -v startxfce4" >/dev/null 2>&1; then
        run_task "$TARGET" "install_gui" "å®‰è£…æ¡Œé¢ç¯å¢ƒ (ä¸‹è½½é‡å¤§ï¼Œè¯·è€å¿ƒ)"
    fi

    echo -e "\n${G}è¯·é€‰æ‹©å¯åŠ¨æ¨¡å¼:${NC}"
    echo -e "1. Termux:X11 (æ¨è/æµç•…/éœ€å®‰è£…APP)"
    echo -e "2. VNC Viewer (é€šç”¨/å…¼å®¹æ€§å¥½)"
    echo -e "0. è¿”å›"
    
    tput cnorm; stty echo
    read -p "æ¨¡å¼: " m
    stty -echo; tput civis
    
    if [ "$m" == "1" ]; then
        # X11 æ¨¡å¼
        pulseaudio --kill >/dev/null 2>&1
        pkill -f com.termux.x11 >/dev/null 2>&1
        rm -rf "$TMPDIR/.X11-unix"
        
        pulseaudio --start --load="module-native-protocol-tcp auth-ip-acl=127.0.0.1 auth-anonymous=1" --exit-idle-time=-1
        
        # å°è¯•å¯åŠ¨ APP
        am start --user 0 -n com.termux.x11/com.termux.x11.MainActivity >/dev/null 2>&1
        echo "ç­‰å¾… X11 æœåŠ¡å¯åŠ¨..."
        sleep 2
        termux-x11 :0 >/dev/null 2>&1 &
        
        CMD="export DISPLAY=:0 PULSE_SERVER=127.0.0.1; dbus-launch --exit-with-session startxfce4"
        echo "æ­£åœ¨å¯åŠ¨ XFCE4..."
        proot-distro login "$TARGET" --shared-tmp -- bash -c "$CMD"
        
    elif [ "$m" == "2" ]; then
        # VNC æ¨¡å¼
        echo "æ­£åœ¨å¯åŠ¨ VNC Server..."
        # å¼ºåˆ¶é‡ç½®é”æ–‡ä»¶
        CMD="vncserver -kill :1 >/dev/null 2>&1; rm -rf /tmp/.X11-unix/X1 /tmp/.X1-lock; vncserver :1 -geometry 1280x720"
        proot-distro login "$TARGET" -- bash -c "$CMD"
        
        echo -e "\n${G}=== VNC å¯åŠ¨æˆåŠŸ ===${NC}"
        echo -e "åœ°å€: ${W}127.0.0.1:5901${NC}"
        echo -e "å¯†ç : ${W}123456${NC} (å·²è‡ªåŠ¨è®¾ç½®)"
        echo -e "\nè¯·æ‰“å¼€ VNC Viewer APP è¿æ¥ã€‚"
        read -n 1 -s -r -p "æŒ‰ä»»æ„é”®è¿”å›..."
    fi
}

# [åŠŸèƒ½4] å¸è½½
do_uninstall() {
    clear; echo -e "${R}=== å¸è½½ç®¡ç† ===${NC}"
    TARGET=$(select_menu) || return
    
    tput cnorm; stty echo
    read -p "âš ï¸ ç¡®è®¤åˆ é™¤ $TARGET ? (y/n): " confirm
    stty -echo; tput civis
    
    if [[ "$confirm" == "y" ]]; then
        proot-distro remove $TARGET
        echo -e "\n${G}å·²åˆ é™¤ã€‚${NC}"
        read -n 1 -s -r -p "..."
    fi
}

# --- UI ç»˜åˆ¶å¾ªç¯ ---

update_status() {
    NOW=$(date "+%H:%M")
    # å†…å­˜è·å–å®¹é”™å¤„ç†
    if (( FRAME % 50 == 0 )); then
        MEM=$(free -m 2>/dev/null | awk 'NR==2{printf "%.1fG", $3/1024}' || echo "N/A")
    fi
    tput cup 0 34; printf "${B}â•­â”€â”€ STATUS â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®${NC}"
    tput cup 1 34; printf "${B}â”‚${NC} TIME: ${W}%-5s${NC} MEM: ${P}%-5s${NC}         ${B}â”‚${NC}" "$NOW" "$MEM"
    tput cup 2 34; printf "${B}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯${NC}"
}

draw_ui() {
    clear
    printf "${C}â–ˆâ–ˆâ•—  â–ˆâ–ˆâ•—â–ˆâ–ˆâ•—  â–ˆâ–ˆâ•—â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•— ${W}XXY ç¨³å®šç‰ˆ${NC}\n"
    printf "${C}â•šâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•šâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•šâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•”â• ${GR}v33.1 | Fix  ${NC}\n"
    printf "${C} â•šâ–ˆâ–ˆâ–ˆâ•”â•  â•šâ–ˆâ–ˆâ–ˆâ•”â•  â•šâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•  ${NC}\n"
    printf "${C} â–ˆâ–ˆâ•”â–ˆâ–ˆâ•—  â–ˆâ–ˆâ•”â–ˆâ–ˆâ•—   â•šâ–ˆâ–ˆâ•”â•   ${NC}\n"
    
    tput cup 8 0
    printf "${GR}â•­â”€â”€ [ å¸¸ç”¨åŠŸèƒ½ ] â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•® â•­â”€â”€ [ ç®¡ç†åŠŸèƒ½ ] â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®${NC}\n"
    printf "${GR}â”‚${NC} ${W}1.${NC} ç™»å½•ç³»ç»Ÿ (Login)          ${GR}â”‚ â”‚${NC} ${W}4.${NC} å¸è½½ç³»ç»Ÿ (Uninstall)    ${GR}â”‚${NC}\n"
    printf "${GR}â”‚${NC} ${W}2.${NC} å®‰è£…ç³»ç»Ÿ (Install)        ${GR}â”‚ â”‚${NC} ${W}0.${NC} é€€å‡ºç¨‹åº (Exit)         ${GR}â”‚${NC}\n"
    printf "${GR}â”‚${NC} ${W}3.${NC} å¯åŠ¨æ¡Œé¢ (GUI Mode)       ${GR}â”‚ â”‚${NC}                                 ${GR}â”‚${NC}\n"
    printf "${GR}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯ â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯${NC}\n"
}

# --- ä¸»ç¨‹åº ---
create_worker_script
tput civis
stty -echo
draw_ui

INPUT_BUF=""
FRAME=0
COLORS=($R $Y $G $C $B $P)
MEM="Wait"

while true; do
    update_status
    ((FRAME++))
    C_IDX=$((FRAME % 6)); CUR_C=${COLORS[$C_IDX]}
    
    tput cup 14 0; printf "${CUR_C}â•­â”€â”€ è¯·è¾“å…¥åºå· â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®${NC}"
    tput cup 15 0; printf "${CUR_C}â”‚${NC} ${C}â¤${NC} %-40s           ${CUR_C}â”‚${NC}" "$INPUT_BUF${W}â–ˆ${NC}"
    tput cup 16 0; printf "${CUR_C}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯${NC}"

    read -t 0.05 -n 1 key
    if [[ $? -eq 0 ]]; then
        if [[ -z "$key" ]]; then
            if [[ -n "$INPUT_BUF" ]]; then
                case $INPUT_BUF in
                    1) do_login ;;
                    2) do_install ;;
                    3) do_gui ;;
                    4) do_uninstall ;;
                    0) exit 0 ;;
                esac
                tput civis; stty -echo; draw_ui; INPUT_BUF=""
            fi
        elif [[ "$key" == $'\x7f' || "$key" == $'\b' ]]; then
            INPUT_BUF="${INPUT_BUF%?}"
        elif [[ "$key" == $'\e' ]]; then
            read -t 0.01 -n 2
        else
            INPUT_BUF="$INPUT_BUF$key"
        fi
    fi
done
INSTALL_EOF

chmod 755 $PREFIX/bin/xxy
sed -i 's/\r$//' $PREFIX/bin/xxy
echo -e "\033[1;32mâœ… XXY v33.1 æ›´æ–°å®Œæˆï¼\nè¾“å…¥ xxy å³å¯å¯åŠ¨ã€‚\033[0m"
